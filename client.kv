ScreenManager:
    MainScreen:
    Connection:
    Search:
    History:

<MainScreen>:
    name:'main'
    on_pre_enter: app.screen_0_on_enter()
    FloatLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'sea.png'
        Label:
            size_hint:(0.2,0.1)
            pos_hint:{'x':0.1, 'y':0.8}
            text: 'Host'
            font_size: '25sp'
        Label:
            size_hint:(0.2,0.1)
            pos_hint:{'x':0.1, 'y':0.70}
            text: 'Port'
            font_size: '25sp'
        TextInput:
            id: text_input_host
            size_hint:(0.6,0.1)
            pos_hint:{'x':0.3, 'y':0.8}
            font_size: '25sp'
            background_color: (1,1,1,0.4)
        TextInput:
            id: text_input_port
            size_hint:(0.6,0.1)
            pos_hint:{'x':0.3, 'y':0.70}
            font_size: '25sp'
            background_color: (1,1,1,0.4)
        Button:
            background_color: (0,0,0,0)
            color: (0.164, 0.607, 0.850, 1)
            font_size: '25sp'
            size_hint:(0.4,0.2)
            pos_hint:{'center_x':0.5, 'y':0.30}
            text: 'Log in'
            on_press: app.button_log_in_press()


<Connection>:
    name:'connection'
    FloatLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'night.png'
        Label:
            id: text_label
            font_size: '17sp'
            size_hint:(1, 0.7)
            pos_hint:{'x':0.0, 'y':0.3}
            text: 'Message\n'
        TextInput:
            id: text_input
            size_hint:(0.7, 0.15)
            pos_hint:{'x':0.0, 'y':0.15}
            background_color: (1,1,1,0.4)
        Button:
            text:'Send'
            size_hint:(0.3, 0.15)
            pos_hint:{'x':0.7, 'y':0.15}
            on_press: app.button_send_press()
            background_color: (0,0,0,0)
        Button:
            size_hint:(1, 0.15)
            pos_hint:{'x':0, 'y':0}
            text:'History'
            on_press: app.root.current='search'
            background_color: (0,0,0,0)
<Search>:
    name:'search'
    on_enter: app.screen_2_on_enter()
    FloatLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'falling_star.png'
        TextInput:
            id: text_input_search
            size_hint:(0.7, 0.08)
            pos_hint:{'center_x':0.5, 'center_y':0.7}
            font_size: '18sp'
            background_color: (0.9,0.9,0.9,0.4)
        Button:
            text:'Search'
            size_hint:(0.3, 0.15)
            pos_hint:{'center_x':0.5, 'center_y':0.5}
            background_color: (0,0,0,0)
            on_press: app.button_search_press()
<History>:
    name:'history'
    on_enter: app.screen_on_enter(3)
    FloatLayout:
        id: layout_history
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'falling_star.png'
        ScrollView:
            size_hint:(0.9,0.8)
            pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            do_scroll_x: False
            GridLayout:
                id: gridlayout
                cols:1
                padding:10
                spacing:10
                size_hint:(None,None)
                size:(900, 500)
        Button:
            text:'Back'
            background_color: (0,0,0,0)
            size_hint:(0.16, 0.12)
            pos_hint:{'right':1, 'top':0.12}
            on_press: app.root.current='connection'
        Label:
            id: history_label
            size_hint:(0.12, 0.08)
            pos_hint:{'x':0.03, 'y':0.01}


